
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite my-5 p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Service List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> Create New Frequency</a>
        </div>
    </div>

    <table id="tblData" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Frequency Count</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/service.js"></script>
}